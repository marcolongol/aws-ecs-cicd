{
  "name": "webapp",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/webapp/webapp",
  "targets": {
    "lock": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry lock --no-update",
        "cwd": "apps/webapp"
      }
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "{workspaceRoot}/dist/apps/webapp",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      }
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "cacheDir": ".cache/pypoetry",
        "verbose": false,
        "debug": false
      }
    },
    "serve": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "cwd": "apps/webapp"
      },
      "configurations": {
        "development": {
          "command": "poetry run hupper -m waitress --listen *:3000 webapp:app"
        }
      },
      "defaultConfiguration": "development"
    },
    "lint": {
      "executor": "@nxlv/python:flake8",
      "outputs": ["{options.outputFile}"],
      "options": {
        "outputFile": "{workspaceRoot}/reports/apps/webapp/pylint.txt"
      }
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/apps/webapp/unittests",
        "{workspaceRoot}/coverage/apps/webapp"
      ],
      "options": {
        "command": "poetry run pytest tests/",
        "cwd": "apps/webapp"
      }
    }
  },
  "tags": []
}
